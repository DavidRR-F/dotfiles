{
  "bang": {
    "prefix": "bang",
    "body": [
      "#!/bin/bash -eu"
    ],
    "description": "default shebang"
  },
  "ci-buildprep": {
    "prefix": "ci-buildprep",
    "body": [
      "#!/bin/bash -eu",
      "",
      "mkdir -p \\${APP_DEPLOY_SUBDIR}/deployables/",
      "cp k8s-run.sh \\${APP_DEPLOY_SUBDIR}/deployables/",
      "cp -r app/ \\${APP_DEPLOY_SUBDIR}/deployables/",
      "cp requirements.txt \\${APP_DEPLOY_SUBDIR}/deployables/"
    ],
    "description": "buildprep script template"
  },
  "ci-validate": {
    "prefix": "ci-validate",
    "body": [
      "#!/bin/bash -eux",
      "",
      "curl -v --fail --retry 10 --retry-all-errors https://\\${APP_INGRESS_HOST}"
    ],
    "description": "validate script template"
  },
  "k8s-run": {
    "prefix": "k8s-run",
    "body": [
      "#!/bin/bash -eu",
      "",
      "${1:python ./app/main.py}"
    ],
    "description": "run script template"
  }
}
